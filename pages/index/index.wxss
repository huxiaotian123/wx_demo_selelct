/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.title{
  width: 100%;
  height: 44px;
  display: flex;
  flex-direction: row;
}

.gray_color{
  background-color: #aaa;
}

.select-item{
  flex-grow: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.scroll-view_item-list{
  width: 100%;
  height: 400px;
  flex-direction: column;
}

.item-column{
  padding-left: 20px;
  width: max-content;
  height: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
}


.show{
  display: flex;
}

.hide{
  display: none;
}